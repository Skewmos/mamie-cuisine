{% extends 'admin/base-admin.html.twig' %}

{% block title %}Recette : {{ recipe.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h3> {{ recipe.title }}</h3>
        <div class="d-flex gap-1">
            <a href="{{ path('admin_recipe_edit', {'id': recipe.id}) }}" class="btn btn-success">Modifier</a>
            <form action="{{ path('admin_recipe_delete', {'id': recipe.id}) }}" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
        </div>
        <hr/>
        <span class="text-muted">Date de publication : {{ recipe.createdAt|date('d/m/Y') }}</span>
        <span class="text-muted">Date de mise Ã  jour : {{ recipe.updatedAt|date('d/m/Y') }}</span>
        <p class="mt-3">{{ recipe.content | nl2br }}</p>
    </div>
{% endblock %}